generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Chef {
  id       Int       @id @default(autoincrement())
  username String    @db.VarChar(255)
  recipe   Recipes[]
}

model Recipes {
  id     Int    @id @default(autoincrement())
  meal   String
  userId Int
  user   Chef   @relation(fields: [userId], references: [id])

  @@index([userId])
}
